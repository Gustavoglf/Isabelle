  <audio id="player"></audio>

  <script>
    function mostrarMensagem() {
      const nome = document.getElementById("nomeInput").value;
      if (nome.trim() === "") return;
      document.querySelector("h1").classList.add("hidden");
      document.getElementById("nomeInput").classList.add("hidden");
      document.querySelector("button").classList.add("hidden");
      document.getElementById("mensagem").classList.remove("hidden");
      document.getElementById("bemVinda").innerText = "Bem-vinda " + nome + " üíñ";
    }

    function tocarMusica(arquivo) {
      const audio = document.getElementById("player");
      audio.src = arquivo;
      audio.play();

      // Piscar de acordo com o ritmo (simulado)
      let emojis = ["üíÉ", "üï∫", "‚ú®", "üé∂", "üî•"];
      let i = 0;
      setInterval(() => {
        document.body.style.backgroundColor =
          document.body.style.backgroundColor === "black" ? "#ff4fa3" : "black";
        document.getElementById("emoji").innerText = emojis[i % emojis.length];
        i++;
      }, 400); // velocidade do "ritmo"
    }
  </script>
